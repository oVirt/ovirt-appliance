<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="8.0" name="ovirt-engine-appliance">
    <description type="system">
        <author>oVirt Developers</author>
        <contact>devel@ovirt.org</contact>
        <specification>oVirt Appliance - AlmaLinux 10</specification>
    </description>
    <include from="file://kiwi/default.xml"/>
    <repository sourcetype="mirrorlist">
        <source path="https://mirrors.almalinux.org/mirrorlist/10/baseos?arch=$basearch&amp;protocol=https"/>
    </repository>
    <repository sourcetype="mirrorlist">
        <source path="https://mirrors.almalinux.org/mirrorlist/10/appstream?arch=$basearch&amp;protocol=https"/>
    </repository>
    <repository sourcetype="mirrorlist">
        <source path="https://mirrors.almalinux.org/mirrorlist/10/extras?arch=$basearch&amp;protocol=https"/>
    </repository>
    <repository sourcetype="metalink">
        <source path="https://mirrors.fedoraproject.org/metalink?repo=epel-10&amp;arch=x86_64"/>
    </repository>
    <!-- COPR -->
    <repository alias="copr_ovirt-master-snapshot" profiles="copr">
        <source path="https://download.copr.fedorainfracloud.org/results/ovirt/ovirt-master-snapshot/rhel-10-x86_64/">
            <signing key="https://download.copr.fedorainfracloud.org/results/ovirt/ovirt-master-snapshot/pubkey.gpg"/>
        </source>
    </repository>
    <packages type="image" profiles="copr">
        <package name="ovirt-release-master"/>
    </packages>
    <!-- CBS -->
    <repository alias="almalinux-extras" profiles="cbs">
        <source path="https://repo.almalinux.org/almalinux/10/extras/x86_64/os/"/>
    </repository>
    <packages type="image" profiles="cbs">
        <package name="centos-release-ovirt45-testing"/>
    </packages>
    <include from="file://kiwi/packages.xml"/>
</image>
